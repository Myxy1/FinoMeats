<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hatter"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="210sp"
        android:layout_height="210sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/buttonRendeles"
        android:layout_centerInParent="true"
        android:text="Rendelés"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button_style"
        android:shadowColor="#A8A8A8"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/buttonInformacio"
        android:layout_centerInParent="true"
        android:layout_below="@id/buttonRendeles"
        android:text="Információ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_margin="30sp"
        android:background="@drawable/button_style"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/buttonKapcsolat"
        android:layout_centerInParent="true"
        android:layout_below="@id/buttonInformacio"
        android:text="Kapcsolat"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonKapcsolat"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/fb_icon"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/twitter_icon"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/instagram_icon"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>